{
    "viewport_width": {
        "description": "视口宽度",
        "type": "int",
        "hint": "影响截图的宽度",
        "default": 1920
    },
    "viewport_height": {
        "description": " 视口高度",
        "type": "int",
        "hint": "影响截图的高度",
        "default": 1400
    },
    "zoom_factor": {
        "description": "标签页的默认缩放比",
        "type": "float",
        "hint": "",
        "default": 1.5
    },
    "full_page_zoom_factor": {
        "description": "查看整页时的默认缩放比",
        "type": "int",
        "hint": "0表示不改变原来的缩放比",
        "default": 0
    },
    "default_search_engine": {
        "description": "默认使用的搜索引擎",
        "type": "string",
        "hint": "请用'/收藏夹'查看可用链接",
        "options": [
            "必应搜索",
            "谷歌搜索",
            "百度搜索",
            "B站搜索",
            "抖音搜索",
            "github搜索"
          ],
        "default": "必应搜索"
    },
    "max_pages": {
        "description": "允许的最大标签页数量",
        "type": "int",
        "hint": "打开的标签页超过这个数量时，会自动关闭最开始打开的标签页,（请根据性能设置合适的数量）",
        "default": 5
    },
    "rebuild_ticks_img": {
        "description": "启动时重新生成浏览器刻度图",
        "type": "bool",
        "hint": "浏览器刻度图已存在时，可以换掉这个开关了",
        "default": false
    },
    "delete_file_cookies": {
        "description": "清空cookies时删除存储在json中的cookies",
        "type": "bool",
        "hint": "注意这样会导致需要浏览器重启时重新登录",
        "default": false
    },
    "banned_words": {
        "description": "禁止使用的关键词",
        "type": "list",
        "hint": "屏蔽含有禁词的搜索请求、访问链接、输入文本",
        "default": [
            "pornhub",
            "色情",
            "成人",
            "赌博",
            "暴力",
            "政治",
            "反动",
            "恐怖",
            "谣言",
            "诈骗",
            "病毒"
        ]
    },
    "astrbot_config": {
        "description": "Astrbot配置",
        "type": "object",
        "hint": "仅管理员能打开Astrbot面板",    
        "items": {
            "password": {
                "description": "Astrbot面板密码",
                "type": "string",
                "hint": "Astrbot面板的登录密码",
                "default": "astrbot"
            }
        }
    },
    "napcat_config": {
        "description": "NatCat配置",
        "type": "object",
        "hint": "仅管理员能打开NatCat面板，仅在使用NapCat协议端时以下的配置才有效",
        "items": {
            "webui_url": {
                "description": "NatCat面板端口",
                "type": "string",
                "hint": "NatCat面板的开放端口一般默认都是6099",
                "default": "6099"
            },
            "token": {
                "description": "Token",
                "type": "string",
                "hint": "NatCat面板的登录密码",
                "default": "napcat"
            },
            "dark_themes": {
                "description": "暗黑主题",
                "type": "bool",
                "hint": "",
                "default": false
            }
        }
    }
}